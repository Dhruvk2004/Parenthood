<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskPermissions"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="122dp"
        android:layout_height="129dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/abeezee"
        android:text="Parenthood"
        android:textColor="#155B80"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/read_care_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Read Carefully"
        android:fontFamily="@font/abeezee"
        android:textSize="22sp"
        android:textColor="@color/text_color_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />


    <TextView
        android:id="@+id/first_condition"
        android:layout_width="335dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/abeezee"
        android:lineHeight="22dp"
        android:text="1. We are committed for protecting your privacy. All personal information, including location and app usage data, is securely stored and managed through Firebase, our trusted third-party platform "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/read_care_txt" />

    <TextView
        android:id="@+id/second_condition"
        android:layout_width="335dp"
        android:layout_height="108dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/abeezee"
        android:lineHeight="22dp"
        android:text="2. We only collect the necessary data required to provide key features like real-time location tracking, geofencing, and app usage monitoring. We do not share or sell your data to third parties"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_condition" />


    <TextView
        android:id="@+id/third_condition"
        android:layout_width="335dp"
        android:layout_height="133dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/abeezee"
        android:lineHeight="22dp"
        android:text="3. Parent profiles will have access to location and usage information provided by child profiles. This data is solely for monitoring purposes, to ensure safety, and is not used for any other purpose beyond the app's functionality."
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_condition" />

    <TextView
        android:id="@+id/fourth_condition"
        android:layout_width="335dp"
        android:layout_height="108dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/abeezee"
        android:lineHeight="22dp"
        android:text="4. We request permissions such as location access and usage tracking to provide the intended functionality. "
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/per_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third_condition"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/per_bt"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginBottom="28dp"
        android:width="200sp"
        android:height="80sp"
        android:backgroundTint="#155B80"
        android:fontFamily="@font/abeezee"
        android:text="Grant Permission"
        android:textColorHighlight="#155B80"
        android:textColorLink="#155B80"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
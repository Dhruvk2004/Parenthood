<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">


    <ImageView
        android:layout_width="266dp"
        android:layout_height="308dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/app_activity"
        app:layout_constraintBottom_toTopOf="@+id/frag1_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />

    <TextView
        android:id="@+id/skip_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:text="Skip"
        android:fontFamily="@font/abeezee"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frag1_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/abeezee"
        android:text="Stay Updated On"
        android:textColor="@color/dark_blue"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frag1_title2"
        android:layout_width="335dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="424dp"
        android:fontFamily="@font/abeezee"
        android:text="App Activity"
        android:textColor="@color/dark_blue"
        android:textSize="43sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frag1_subtext"
        android:layout_width="236dp"
        android:layout_height="82dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/abeezee"
        android:text="Receive instant notifications when apps are installed or removed. Stay informed and ensure your child's digital safety. "
        android:textAlignment="viewStart"
        android:textColor="@color/dark_blue"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag1_title2" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="76dp"
        android:layout_height="64dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag1_subtext"
        app:srcCompat="@drawable/slider1" />

</androidx.constraintlayout.widget.ConstraintLayout>
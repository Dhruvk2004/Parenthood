<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="5dp" android:color="@color/dark_blue" /> <!-- Border color and width -->
            <corners android:radius="15dp" /> <!-- Same corner radius as CardView -->
        </shape>
    </item>

    <!-- Card background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color of CardView -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>

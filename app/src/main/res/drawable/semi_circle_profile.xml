<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="125dp" /> <!-- Half of the diameter for the circle -->
            <size
                android:width="250dp"
                android:height="250dp" />
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp" />
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="#4d000000"  android:angle="90" />
        </shape>
    </item>

    <!-- Main circular background -->
    <item android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <corners android:radius="125dp" />
            <stroke
                android:width="2dp"  android:color="@color/text_color_dark" /> <!-- Stroke color -->
        </shape>
    </item>
</layer-list>
